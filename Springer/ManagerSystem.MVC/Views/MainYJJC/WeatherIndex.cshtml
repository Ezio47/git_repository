@{
    //ViewBag.Title = "天气情况";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
@using ManagerSystem.MVC.Models
@model IEnumerable<ManagerSystem.MVC.Models.WeatherInfoModel>

<div class="easyui-layout" data-options="fit:true" style=" border:0;">

    <div data-options="region:'west'" title="" style=" width:220px; border: none; ">
        @Html.Raw(@ViewBag.PageLeftMenu)
    </div>
    <div data-options="region:'center'" title="" style=" border: none; background:#ddceee;">

        <div class="easyui-layout" data-options="fit:true" style=" border:0;">
            <div data-options="region:'center'" title="" style=" border: none; ">
                <div class="divTable" id="divTable">
                    <table cellpadding="0">
                        <thead>
                            <tr>
                                <th>区域</th>
                                <th>雨量</th>
                                <th>温度</th>
                                <th>最低温度--最高温度</th>
                                <th>日期</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                int i=0;
                                foreach (WeatherInfoModel item in Model)
                                {
                                    i++;
                                    if (i % 2 == 0)
                                    {
                                    <tr>
                                        <td>@item.AreaName</td>
                                        <td>@item.Hum</td>
                                        <td>@item.TCur</td>
                                        <td>@item.HighAndLow</td>
                                        <td>@item.WeatherDate</td>
                                    </tr>
                                    }
                                    else
                                    {
                                        <tr class="row1">
                                            <td>@item.AreaName</td>
                                            <td>@item.Hum</td>
                                            <td>@item.TCur</td>
                                            <td>@item.HighAndLow</td>
                                            <td>@item.WeatherDate</td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                        
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>