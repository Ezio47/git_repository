@{
    Layout = "~/Views/Shared/_LayOutIndex.cshtml";
}
@section Header{
}

<div class="easyui-layout" data-options="fit:true" style=" border:0;">
    <div data-options="region:'west'" title="" style=" width:220px; border: none; ">
        @Html.Raw(@ViewBag.PageLeftMenu)
    </div>
    <div data-options="region:'center'" title="" style=" border: none; background:#ddceee;">
        <div class="easyui-layout" data-options="fit:true" style=" border:0;">
            <div data-options="region:'north'" title="" style=" height:35px; border: none; overflow:hidden;">
                <div class="divOP">
                    <div class="home ">
                        <input type="button" value="添加" onclick="Add()" class="btnAddCss" />
                        说明： 级别：1州级别2市县级别3乡镇级别
                    </div>
                </div>
            </div>
            <div data-options="region:'center'" title="" style=" border: none; ">
                <div class="divTable" id="divTable">

                </div>
            </div>

        </div>
    </div>

</div>


<script type="text/javascript">
    $(function () {
        query();
    });
    function query() {
        $.ajax({
            url: '/System/getRoleListAjax',
            timeout: 10000, //10秒后超时，如果为0则永不超时
            data: {},
            success: function (data, ioArgs) {
                var ar = eval('(' + data + ')');
                if (ar.Success) {
                    $('#divTable').html('');
                    $('#divTable').html(ar.tableInfo);
                }
                else {
                    layer.msg('登录异常!', { icon: 5 });
                }
            },
            error: function (err, ioArgs) {
                layer.msg('系统异常!', { icon: 5 });
            }
        });
    }

    function Manager(id) {
        layer.confirm('确实要删除吗?', { icon: 3, title: '提示' }, function (index) {
            $.ajax({
                url: '/System/RoleManager',
                data: { ID: id, Method: 'Del', returnUrl: '' },
                type: 'post',
                error: function () {
                    layer.msg('系统异常!', { icon: 5 });
                },
                success: function (re) {
                    var ar = eval('(' + re + ')');
                    if (ar.Success) {
                        layer.msg('删除成功!', { icon: 6 });
                        query();
                    }
                    else {
                        layer.msg(ar.Msg, { icon: 5 });
                    }
                }
            });
        });
    }

    function Add() {
        layer.open({
            type: 2,
            title: '添加',
            fix: false, //不固定
            area: ['70%', '90%'],
            maxmin: true,
            content: '/System/RoleMan',
            end: function () {
                query();
            }
        });
    }

    function Mdy(Method, ID) {
        layer.open({
            type: 2,
            title: '修改',
            fix: false, //不固定
            area: ['70%', '90%'],
            maxmin: true,
            content: '/System/RoleMan?Method=' + Method + "&ID=" + ID,
            end: function () {
                query(); 
            }
        });
    }

    function See(Method, ID) {
        layer.open({
            type: 2,
            title: '查看',
            fix: false, //不固定
            area: ['70%', '90%'],
            maxmin: true,
            content: '/System/RoleMan?Method=' + Method + "&ID=" + ID,
        });
    }
</script>