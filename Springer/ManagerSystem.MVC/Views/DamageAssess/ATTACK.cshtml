                    type: "post",
                    url: "/DamageAssess/ATTACKManager",
                    data: { PID: ID, AttackType: AttackType, Method: Method },
                    dataType: "json",
                    success: function (re) {
                        if (re.Success) {
                            layer.msg(re.Msg, { icon: 6 });
                            query();
                        }
