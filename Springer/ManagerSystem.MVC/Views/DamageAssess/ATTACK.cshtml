                        else {
                            if (CheckNUM2(loseMoney) == false) {
                                layer.msg('损失金额请输入数字,且最多保留2位有效数字!', { icon: 5 });
                                $('#tbxLOSEMONEY').focus();
                                return;
                            }
                        }
                        $.ajax({
                            type: "post",
                            url: "/DamageAssess/ATTACKManager",
                            data: {
                                AttackType: AttackType,
                                PID: ID,
                                PNAME: pName,
                                FIREINFOID: $('#hidFIREINFOID').val(),
                                LOSEMONEYCOUNT: loseMoney,
                                MARK: $('#tbxMARK').val(),
                                Method: Method
                            },
                            dataType: "json",
                            success: function (data) {
                                if (data.Success) {
                                    $('#HidID').val(data.Url);
                                    layer.confirm(data.Msg + ' 请返回?', { icon: 3, title: '提示' }, function (index2) {
                                        layer.close(index2);
                                        layer.close(index);
                                    });
                                    query();
                                }
                                else {
                                    layer.msg(data.Msg, { icon: 5 });
                                }
                            },
                            error: function () {
                                layer.msg('系统异常!', { icon: 5 });
                            }
                        });
                    }
                },
                cancel: function (index) {
                    layer.close(index);
                }
            })
        }
    }
