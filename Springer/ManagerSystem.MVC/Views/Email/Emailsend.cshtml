<div id="gd" class="easyui-dialog" title="群组展示" style="width: 550px; height: 400px; display: none; top: 50px" data-options="closed:true,resizable:true,modal:true">
    <div id="groupgrid"></div>
</div>
<div class="divMan" id="tablesee" style="display:none;margin-left:5px;margin-top:8px">
    <div class="divMan">
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td style="width:80px;"> 群组名称: </td>
                <td>
                    <input id="EGROUPNAME" type="text" style="height:25px;width:700px" readonly />
                </td>
            </tr>
            <tr>
                <td style="width:80px;"> 群组人员: </td>
                <td>
                    <input id="EGROUPMEMBERLIST" type="text" style="height:25px;width:700px" readonly />
                </td>
            </tr>
        </table>
    </div>
</div>
<script type="text/javascript">
    var um = UM.getEditor('myEditor');
    UM.getEditor('myEditor').setContent("", false);

    $(function () {
        var sd;
        $('#tt').tree({
            url: '/Email/TreeUSERGet',
            checked: false,
            animate: true,
            lines: true,
            cache: false,
            onCheck: function (node, checked) {
                if (checked) {
                    var ss = getChecked();
                }
                else {
                    var ss = getChecked();
                }
                if ($.trim(ss) != "") {
                    sd = ss.split("|");
                }
                else {
                    sd[0] = "";
                    sd[1] = "";
                }
                var va = $('#hidvalue').val();
                if (va == "0") {
                    $('#tbxEMAILRECUSERLIST').val(sd[0]);
                    $('#sjrid').val(sd[1]);
                }
                else if (va == "1") {
                    // var sd = ss.split("|");
                    $('#tbxEMAILCOPYUSERLIST').val(sd[0]);
                    $('#csrid').val(sd[1]);
                }
                else if (va == "2") {
                    //var sd = ss.split("|");
                    $('#tbxEMAILSECRETUSERLIST').val(sd[0]);
                    $('#msrid').val(sd[1]);
                }
            }
        });
    })

    function getChecked() {
        var nodes = $('#tt').tree('getChecked');
        var s = '';
        var d = '';
        if (nodes.length != 0) {
            for (var i = 0; i < nodes.length; i++) {
                if (nodes[i].id == '') {
                    continue;
                }
                if (s != '') s += ',';
                if (d != '') d += ',';
                s += nodes[i].text;
                d += nodes[i].id;
            }
            return s + "|" + d;
        }
        else {
            return "";
        }
    }

    //初始化
    function reset() {
        var s1 = $('#tbxEMAILRECUSERLIST').val();//发件人
        var s2 = $('#tbxEMAILCOPYUSERLIST').val();//抄送人
        var s3 = $('#tbxEMAILSECRETUSERLIST').val();//密送人
        var sd0 = $('#sjrid').val();//发件人id
        var str0 = sd0.split(",");
        var sd1 = $('#csrid').val();//抄送人id
        var str1 = sd1.split(",");
        var sd2 = $('#msrid').val();//秘送人id
        var str2 = sd2.split(",");
        if (document.activeElement.id == "tbxEMAILRECUSERLIST") {//收件人
            $('#hidvalue').val(0);
            if ($.trim(s1) == "") {
                $('#tt').tree();
                $('#sjrid').val('');
            }
            else {
                //去除抄送人id
                for (var i = 0; i < str1.length ; i++) {
                    var node = $('#tt').tree('find', str1[i]);
                    $('#tt').tree('uncheck', node.target);
                }
                //去除秘送人id
                for (var i = 0; i < str2.length ; i++) {
                    var node = $('#tt').tree('find', str2[i]);
                    $('#tt').tree('uncheck', node.target);
                }
                //check 收件人
                for (var i = 0; i < str0.length ; i++) {
                    var node = $('#tt').tree('find', str0[i]);
                    $('#tt').tree('check', node.target);
                }

            }
        } else if (document.activeElement.id == "tbxEMAILCOPYUSERLIST") {//抄送人
            $('#hidvalue').val(1);
            if ($.trim(s2) == "") {
                $('#tt').tree();
                $('#csrid').val('');
            }
            else {
                //去收件人id
                for (var i = 0; i < str0.length ; i++) {
                    var node = $('#tt').tree('find', str0[i]);
                    $('#tt').tree('uncheck', node.target);
                }
                //去除秘送人id
                for (var i = 0; i < str2.length ; i++) {
                    var node = $('#tt').tree('find', str2[i]);
                    $('#tt').tree('uncheck', node.target);
                }
                //check 抄送人
                for (var i = 0; i < str1.length ; i++) {
                    var node = $('#tt').tree('find', str1[i]);
                    $('#tt').tree('check', node.target);
                }
            }
        } else {
            $('#hidvalue').val(2);
            if ($.trim(s3) == "") {
                $('#tt').tree();
                $('#msrid').val('');
            }
            else {
                //去收件人id
                for (var i = 0; i < str0.length ; i++) {
                    var node = $('#tt').tree('find', str0[i]);
                    $('#tt').tree('uncheck', node.target);
                }
                //去除抄送人id
                for (var i = 0; i < str1.length ; i++) {
                    var node = $('#tt').tree('find', str1[i]);
                    $('#tt').tree('uncheck', node.target);
                }
                //check 秘送人
                for (var i = 0; i < str2.length ; i++) {
                    var node = $('#tt').tree('find', str2[i]);
                    $('#tt').tree('check', node.target);
                }
            }
        }
    }

    function Manager(Method) {
        $.ajax({
            url: '/Email/EmailManager',
            data: {
                EMAILCONTENT: UM.getEditor('myEditor').getContent(),
                EMAILID: document.getElementById("tbxEMAILID").value,
                EMAILRECUSERLIST: $('#sjrid').val(),
                EMAILCOPYUSERLIST: $('#csrid').val(),
                EMAILSECRETUSERLIST: $('#msrid').val(),
                EMAILTITLE: document.getElementById("tbxEMAILTITLE").value,
                Method: Method,
                returnUrl: '@Html.Raw(@ViewBag.T_UrlReferrer)'
            },
            type: 'post',
            error: function () {
                layer.msg('错误:异常!');
            },
            success: function (re) {
                var ar = eval('(' + re + ')');
                if (ar.Success) {
                    if (confirm(ar.Msg + ' 请返回！')) {
                        window.location.assign(ar.Url);
                    }
                }
                else {
                    layer.msg(ar.Msg, "Error");
                }
            }
        });
    }
</script>

<script type="text/javascript">
    $(function () {
        //附件
        $('#attachment').filebox({
            buttonText: '选择文件'
        })
    });
    //增加附件
    var attr = [];
    function upload() {
        var path = $("#attachment").filebox('getValue');
        if (path == null || path == "" || path == undefined) {
            layer.msg("请选择附件！");
            return;
        }
        var name = path.split('\\')[path.split('\\').length - 1];
        for (var i = 0; i < attr.length; i++) {
            if (attr[i] == name) {
                layer.msg("请勿重复上传附件！");
                return;
            }
        }
        var hz = name.split('.')[1];
        if (hz == "exe") {
            layer.msg("不允许上传exe文件!");
            return;
        }
        //upload method
        var formData = new FormData($("#uploadForm")[0]);
        formData.append("emailid", $('#tbxEMAILID').val())
        $.ajax({
            type: "post",
            url: "@Url.Action("Uploadfire", "Email")",
            data: formData,
            dataType: "json",
            async: false,
            cache: false,
            contentType: false,
            processData: false,
            success: function (data) {
                if (data.Success) {
                    attr.push(name);
                    $li = $('<li><a href="#">' + name + '</a> $nbsp;$nbsp;').appendTo($('#ul_files'));
                    //$del = $('<img id="' + name + '" src="../Content/themes/easyui/icons/cancel.png" href="javascript:void(0);" onclick="del(this);" />').appendTo($li);
                    $del = $('<a id="' + name + '"  href="javascript:void(0);" onclick="del(this,' + data.Url + ');"> 删 除</a>').appendTo($li);
                    $end = $('<br /></li>').appendTo($del);
                    $('#tbxEMAILID').val(data.Msg);
                }
            },
            error: function (data) {
                layer.msg("上传失败");
            }
        });
        $("#attachment").filebox('clear');
    }

    function as(s) {
        alert(s);
    }

    function del(s, value) {
        var ss = $('#' + value).val();
        $.messager.confirm('确认', '您确认想要删除记录吗？', function (r) {
            if (r) {
                $.ajax({
                    url: '/Email/DEL',
                    data: {
                        EFID: ss,
                        Method: 'DEL',
                        BYEMAILID: document.getElementById("tbxEMAILID").value,
                    },
                    type: 'post',
                    success: function (data) {
                        var ar = eval('(' + data + ')');
                        if (ar.Success) {
                            s.parentNode.remove();
                            attr.remove(s.id);
                        }
                        else {
                            alert('删除失败')
                        }
                    },
                    error: function () {
                        alert('错误:异常!', 'error');
                    },
                });

            }
        })
    }

    function cancel() {
        $("#attachment").filebox('clear');
    }

    //删除JS数组中的某个元素
    Array.prototype.remove = function (val) {
        var index = this.indexOf(val);
        if (index > -1) {
            this.splice(index, 1);
        }
    };
    ///群组组成
    function opengroup() {
        //群组组成
        groupgrid = $('#groupgrid').datagrid({
            url: '/Email/GetGroupContentData?EGROUPTYPE=1',
            idField: 'EGROUPID',
            pageSize: 10,
            striped: true, //奇偶行是否区分
            columns: [[
              { field: 'EGROUPID', title: '自定义群组编码', width: 40, sortable: true, hidden: true },
              { field: 'EGROUPNAME', title: '群组名称', width: 40, sortable: true },
            { field: 'EGROUPMEMBERLIST', title: '群组组成', width: 250, sortable: true }]],
            styler: function (index, row) {
                return 'background-color:green;color:green';
            },
            fit: true,
            remoteSort: false,
            pagination: true,//显示分页栏。
            rownumbers: true,
            fitColumns: true,
            singleSelect: true,
            toolbar: [
                 {
                     iconCls: 'icon-pencil',
                     text: "新建",
                     handler: function () {
                         $('#gd').dialog('close');
                         layer.open({
                             type: 2,
                             title: '新建群组员',
                             area: ['65%', '70%'],
                             fix: true,
                             maxmin: true,
                             content: '/Email/EmailtemplateMan?Method=' + 'Add',
                         });
                         $('#gd').dialog('close');
                     }
                 }, '-',
                 {
                     iconCls: 'icon-edit',
                     text: "更新",
                     handler: function () {
                         var arr = groupgrid.datagrid('getSelections');
                         if (arr.length == 0) {
                             $.messager.alert('提示', '请选择要更新的记录！');
                         }
                         else {
                             layer.open({
                                 type: 2,
                                 title: '更新群组员',
                                 area: ['70%', '80%'],
                                 fix: false, //不固定
                                 maxmin: true,
                                 content: '/Email/EmailtemplateMan?EID=' + arr[0].EGROUPID + "&Method=" + 'Mdy',
                             });
                         }
                         $('#gd').dialog('close');
                     }
                 }, '-',
                 {
                     iconCls: 'icon-search',
                     text: "查看",
                     handler: function () {
                         var arr = groupgrid.datagrid('getSelections');
                         if (arr.length == 0) {
                             $.messager.alert('提示', '请选择要查看的记录！');
                         }
                         else {
                             $.ajax({
                                 type: "Post",
                                 url: "/Email/GetGROUPjson",
                                 data: {
                                     EGROUPID: arr[0].EGROUPID,
                                 },
                                 dataType: "json",
                                 error: function () {
                                     layer.msg('错误:异常!', 'error');
                                 },
                                 success: function (re) {
                                     $('#EGROUPNAME').val(re.EGROUPNAME);
                                     $('#EGROUPMEMBERLIST').val(re.EGROUPMEMBERLIST);
                                 }
                             });
                             layer.open({
                                 type: 1,
                                 title: '群组查看',
                                 area: ['60%', '50%'],
                                 fix: false,
                                 maxmin: true,
                                 shade: 0,
                                 offset: ['100px', '300px'],
                                 content: $('#tablesee'),
                             });
                         }
                         $('#gd').dialog('close');
                     }
                 }, '-',
                 {
                     iconCls: 'icon-remove',
                     text: "删除",
                     handler: function () {
                         var arr = groupgrid.datagrid('getSelections');
                         if (arr.length == 0) {
                             $.messager.alert('提示', '请选择要删除的记录！');
                         }
                         else if (arr.length > 1) {
                             $.messager.alert('提示', '请选择一条要删除的记录！');
                         } else {
                             $.messager.confirm('确认', '是否要删除这条记录?', function (r) {
                                 if (r) {
                                     $.ajax({
                                         url: '/Email/EGROUPManger',
                                         data: {
                                             EGROUPID: arr[0].EGROUPID,
                                             Method: 'Del',
                                         },
                                         type: 'post',
                                         dataType: 'json',
                                         success: function (data) {
                                             if (data && data.Success) {
                                                 groupgrid.datagrid('clearSelections');
                                                 groupgrid.datagrid('reload');
                                                 $.messager.alert('提示', data.Msg);
                                             }
                                             else {
                                                 $.messager.alert('提示', data.Msg, 'error');
                                             }
                                         }
                                     });
                                 }
                             });
                         }
                     }
                 }, '-', {
                     iconCls: 'icon-cut',
                     text: "关闭",
                     handler: function () {
                         $('#gd').dialog('close');
                     }
                 }],
            onDblClickRow: function (rowIndex, rowData) {
                $('#tbxMessageNAME').val(rowData.EGROUPMEMBERLIST);
                $('#sjrid').val(rowData.EGROUPPHONELIST);
                var str = rowData.EGROUPPHONELIST.split(',');
                for (var i = 0; i < str.length ; i++) {
                    if (str[i] != '') {
                        var node = $('#tt').tree('find', str[i]);
                        if (node != null) {
                            $('#tt').tree('check', node.target);
                        }
                    }
                }
                $('#gd').dialog('close');
            }

        });
        $('#gd').css("display", "block");
        $('#gd').dialog('open');
    }
</script>

