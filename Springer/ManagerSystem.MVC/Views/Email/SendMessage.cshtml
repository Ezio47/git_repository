    <script type="text/javascript">
        var scmbgrid;
        var groupgrid;
        var phonelist = '';
        var namlist = '';
        var ephonelist = '';
        var enamlist = '';
        ///人员tree的展示
        $(function () {
            var sd;
            $('#tt').tree({
                url: '/Email/MessageTreeGet?type=0',
                cache: false,
                //data: { nameForMat: "{ADNAME}[{USERJOB}] [电话：{PHONE}]]" },
                checked: false,
                animate: true,
                lines: true,
                cache: false,
                checkbox: true,
                onLoadSuccess: function (data) {
                    var s1 = $('#tbxMessagePHONE').val();
                        var str = s1.split(',');
                        for (var i = 0; i < str.length ; i++) {
                            if (str[i] != '') {
                                var node = $('#tt').tree('find', str[i]);
                                if (node != null) {
                                    $('#tt').tree('check', node.target);
                                }
                            }
                        }
                   
                },
                onCheck: function (node, checked) {
                    if (checked) {
                        var ss = getChecked();
                    }
                    else {
                        var ss = getChecked();
                    }
                    if ($.trim(ss) != "") {
                        sd = ss.split("|");
                    }
                    else {
                        sd[0] = "";
                        sd[1] = "";
                    }
                    $('#tbxMessageNAME').val(sd[1]);
                    $('#tbxMessagePHONE').val(sd[0]);
                }
            });
        })
        function getload(nodes,orgno)
        {
            $('#tt').tree.cascadeChild(nodes, function (node)
            {
                if (node.id == orgno)
                    ('#tt').tree.checkNode(node);
            });
        }
        ///选中的方法
        function getChecked() {
            var nodes = $('#tt').tree('getChecked');
            var s = '';
            var d = '';
            var phone = '';
            var name = '';
            if (nodes.length > 0) {
                for (var i = 0; i < nodes.length; i++) {
                    if ($('#tt').tree('isLeaf', nodes[i].target)) {
                        if (s != '') s += ',';
                        if (d != '') d += ',';
                        s += nodes[i].phone;
                        d += nodes[i].flag;
                    }
                    else {
                        var par = $('#tt').tree('getParent', nodes[i].target)
                        if (nodes[i].state == 'open') {
                            var cnodes = $('#tt').tree('getChildren', nodes[i].target)
                            for (var i = 0; i < cnodes.length; i++) {
                                if ($('#tt').tree('isLeaf', cnodes[i].target)) {
                                    if (s != '') s += ',';
                                    if (d != '') d += ',';
                                    s += cnodes[i].phone;
                                    d += cnodes[i].flag;
                                }
                                else {
                                    var ss = cnodes[i].id.split('|');
                                    $.ajax({
                                        url: '/Email/GetMessagejson',
                                        data: {
                                            ID: ss[0],
                                            TYPE: ss[1],
                                        },
                                        type: 'post',
                                        async: false,
                                        dataType: "json",
                                        error: function () {
                                            layer.msg('错误:异常!');
                                        },
                                        success: function (re) {
                                            if (phone != '') phone += ',';
                                            if (name != '') name += ',';
                                            phone += re.PHONELIST;
                                            name += re.NAMELIST;
                                        }
                                    });
                                }
                            }
                        }
                        if (nodes[i].state == 'closed' && par.checked == false) {
                            var ss = nodes[i].id.split('|');
                            $.ajax({
                                url: '/Email/GetMessagejson',
                                data: {
                                    ID: ss[0],
                                    TYPE: ss[1],
                                },
                                type: 'post',
                                async: false,
                                dataType: "json",
                                error: function () {
                                    layer.msg('错误:异常!');
                                },
                                success: function (re) {
                                    if (phone != '') phone += ',';
                                    if (name != '') name += ',';
                                    phone += re.PHONELIST;
                                    name += re.NAMELIST;
                                }
                            });
                        }
                    }
                }
                if ($.trim(s) != '' && $.trim(phone) != '') {
                    phonelist = s + "," + phone;
                }
                if ($.trim(s) != '' && $.trim(phone) == '') {
                    phonelist = s;
                }
                if ($.trim(s) == '' && $.trim(phone) != '') {
                    phonelist = phone;
                }
                if ($.trim(d) != '' && $.trim(name) != '') {
                    namlist = d + "," + name;
                }
                if ($.trim(d) != '' && $.trim(name) == '') {
                    namlist = d;
                }
                if ($.trim(d) == '' && $.trim(name) != '') {
                    namlist = name;
                }
                return phonelist + "|" + namlist;
            }
            else {
                return "";
            }
        }
        ///短信发送
        function Send() {
            var t1 = $('#tbxMessageNAME').val();
            if ($.trim(t1) == "") {
                layer.msg('请选择发送人', { icon: 5 });
                return;
            }
            $.ajax({
                url: '/Email/MessageSend',
                data: {
                    MessageContent: $('#tbxMessageCONTENT').val(),
                    //MessageTitle: $('#tbxMessageTitle').val(),
                    MessageName: $('#tbxMessageNAME').val(),
                    PHONE: $('#tbxMessagePHONE').val(),
                    returnUrl: '@Html.Raw(@ViewBag.T_UrlReferrer)'
                },
                type: 'post',
                dataType: "json",
                error: function () {
                    layer.msg('错误:异常!');
                },
                success: function (re) {
                    if (re.Success) {
                        if (confirm(re.Msg + ' 请返回！')) {
                            window.location.reload();
                        }
                    }
                    else {
                        layer.msg(re.Msg, { icon: 5 });
                    }
                }
            });
        }
        ///短信模板
        function openscmb() {
            //短信模板
            scmbgrid = $('#scmbgrid').datagrid({
                url: '@Url.Action("GetScSmsContentData")',
                idField: 'EM_MESSAGEID',
                pageSize: 10,
                striped: true, //奇偶行是否区分
                columns: [[
                  { field: 'EM_MESSAGEID', title: '自定义短信模板编码', width: 40, sortable: true, hidden: true },
                { field: 'MessageContent', title: '短信内容', width: 250, sortable: true }]],
                formatter: function (value, row, index) {
                    return 'background-color:#ffee00;color:red;';
                },
                fit: true,
                remoteSort: false,
                pagination: true,//显示分页栏。
                rownumbers: true,
                fitColumns: true,
                singleSelect: true,
                toolbar: [
                     {
                         iconCls: 'icon-edit',
                         text: "更新",
                         handler: function () {
                             var arr = scmbgrid.datagrid('getSelections');
                             if (arr.length == 0) {
                                 $.messager.alert('提示', '请选择要更新的记录！');
                             }
                             else {
                                 layer.open({
                                     type: 2,
                                     title: '更新模板',
                                     area: ['60%', '50%'],
                                     fix: false, //不固定
                                     maxmin: true,
                                     content: '/Email/SMStemplateMan?EM_MESSAGEID=' + arr[0].EM_MESSAGEID + "&Method=" + 'Mdy',
                                 });
                             }
                             $('#gd').dialog('close');
                         }
                     },'-',
                    {
                    iconCls: 'icon-remove',
                    text: "删除",
                    handler: function () {
                        var arr = scmbgrid.datagrid('getSelections');
                        if (arr.length == 0) {
                            $.messager.alert('提示', '请选择要删除的记录！');
                        }
                        else if (arr.length > 1) {
                            $.messager.alert('提示', '请选择一条要删除的记录！');
                        } else {
                            $.messager.confirm('确认', '是否要删除这条记录?', function (r) {
                                if (r) {
                                    $.ajax({
                                        url: '/Email/MessageManger',
                                        data: {
                                            EM_MESSAGEID: arr[0].EM_MESSAGEID,
                                            Method: 'Del',
                                        },
                                        type: 'post',
                                        dataType: 'json',
                                        success: function (data) {
                                            if (data && data.Success) {
                                                scmbgrid.datagrid('clearSelections');
                                                scmbgrid.datagrid('reload');
                                                $.messager.alert('提示', data.Msg);
                                            }
                                            else {
                                                $.messager.alert('提示', data.Msg, 'error');
                                            }
                                        }
                                    });
                                }
                            });
                        }
                    }
                }, '-', {
                    iconCls: 'icon-cut',
                    text: "关闭",
                    handler: function () {
                        $('#dd').dialog('close');
                    }
                }],
                onDblClickRow: function (rowIndex, rowData) {
                    $('#tbxMessageCONTENT').val(rowData.MessageContent);
                    $('#dd').dialog('close');
                }

            });
            $('#dd').css("display", "block");
            $('#dd').dialog('open');
        }
