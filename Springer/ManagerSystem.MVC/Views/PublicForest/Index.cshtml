    function addArg() {
        //
        var arg0 = $("#arg0").val();
        var arg1 = $("#arg1").val();
        var arg2 = $("#arg2").val();
        var arg3 = $("#arg3").val();
        if ($.trim(arg3) == "") {
            $("#arg").val('');
        }
        if (arg0 == "" || arg1 == "" || arg2 == "") {
            alert("请输入完整的查询条件!");
            return;
        }
        var str = $("#arg").val();
        if (arg1 == "like") {
            arg2 = "%" + arg2 + "%";
        }
        if (arg0.indexOf("面") > 0) {
            str = str + " " + arg0 + "　" + arg1 + "　" + arg2 + " " + arg3;
        }
        else {
            str = str + " " + arg0 + "　" + arg1 + "　'" + arg2 + "' " + arg3;
        } 
    
        $("#arg").val(str);

    }
    //重置
    function resetArg() {
        $("#arg").val('');
