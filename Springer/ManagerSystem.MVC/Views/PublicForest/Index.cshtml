    //空间数据检索方法
    function query(page) {
        var pagesize = '10';
        if (document.getElementById("selPageSize") != null) {
            pagesize = document.getElementById("selPageSize").value;
        }
        $('#divPager').html('');
        $('#divSupplies').html('');
        var index = layer.load(0, { offset: ['350px', '80px'], shade: 0.4 });
        $.ajax({
            url: '/PublicForest/GetGYLAjax',
            data: {
                strSql: strsql,
                PageSize: pagesize,
                Page: page
            },
            type: 'post',
            success: function (data) {
                if (data.Success) {
                    //关闭
                    layer.close(index);
                    var str = data.pagerInfo.replace("<ul ", "<ol ").replace("</ul>", "</ol>");
                    $('#divPager').html(str);
                    $('#divSupplies').html(data.tableInfo);
                }
                else {
                    //关闭
                    layer.close(index);
                    alert('登录异常');
                }
            },
            error: function (err, ioArgs) {
                //关闭
                layer.close(index);
                menuOclick('0');
                alert('查询条件有误');
            }
        });
    }
