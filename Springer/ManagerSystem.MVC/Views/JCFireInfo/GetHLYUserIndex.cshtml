        function treeload() {
            var arr = [];
            var arrname = [];
            $('#tt').tree({
                url: '/JCFireInfo/GetHlyPerson',
                checked: false,
                animate: true,
                lines: true,
                cache: false,
                onlyLeafCheck: true,
                onCheck: function (node, checked) {
                    if (0 < node.id.length < 9) {
                        if (checked == true) {
                            arr.push(node.id);
                            arrname.push(delHtmlTag(node.text));
                        }
                        else {
                            arr.remove(node.id);
                            arrname.remove(delHtmlTag(node.text));
                        }
                    }
                    $('#txtid').val(arr);
                    $('#txtname').val(arrname);
                }
            })
        }
