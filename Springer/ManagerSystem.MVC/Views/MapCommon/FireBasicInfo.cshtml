        </tbody>
    </table>
    <object id="SGWorld" classid="CLSID:3a4f91b1-65a8-11d5-85c1-0001023952c1" style="visibility:hidden;height:0 "></object>
</div>
<script type="text/javascript">
    var Fire = @Html.Raw(@ViewBag.Fire);
    //三维地图初始化函数
    $(document).ready(function () {
        $('#typeid').combotree('loadData', Fire);
    });

    ///获取周边护林员
    var area;
    var value= $('#LAYERID').val();
    $("#JL1").click(function () {
        area = $('#JL1').text();
        $('#disInput').val(area);
        GetAroundHlyInfos();
        AroundQuery(value);
    });
    $("#JL2").click(function () {
        area = $('#JL2').text();
        $('#disInput').val(area);
        GetAroundHlyInfos();
        AroundQuery(value);
    });
    $("#JL3").click(function () {
        area = $('#JL3').text();
        $('#disInput').val(area);
        GetAroundHlyInfos();
        AroundQuery(value);
    });
    $("#JL4").click(function () {
        area = $('#JL4').text();
        $('#disInput').val(area);
        GetAroundHlyInfos();
        AroundQuery(value);
    });
    $("#JL5").click(function () {
        area = $('#JL5').text();
        $('#disInput').val(area);
        GetAroundHlyInfos();
        AroundQuery(value);
    });
    $("#chaxun").click(function () {
        area = $('#shuru').val();
        $('#disInput').val(area);
        GetAroundHlyInfos();
        AroundQuery(value);
    });
    function setTime() {
        alert("未检索到周边护林员！");
    }
    function GetAroundHlyInfos() {
        var jd = '@Model.JD';
        var wd = '@Model.WD';
        if (jd == "" || wd == "") {
            alert("周边距离分析无定点经纬度。");
            return false;
        }
        //加载层
        var index = layer.load(0, { offset: ['350px', '80px'], shade: 0.5 }); //0代表加载的风格，支持0-2
        //var area = $('#areaselect').val();//获取选择区域的值
        //setTimeout("getRangeVisibility1("+jd+"," +wd+"," +area+")", 200);
        //getRangeVisibility1(jd, wd, area)
        if (area != "0" && area != "") {
            $.ajax({
                type: "Post",
                url: "/MapCommon/GetHlyByArea",
                data: { jd: jd, wd: wd, area: area },
                dataType: "json",
                success: function (obj) {
                    if (obj != null) {
                        layer.close(index);
                        if (obj.Success) {
                            getLonLatNoDel(obj.Msg);
                        }
                        else {
                            setTimeout("setTime()", 200);
                        }
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("处理出现错误！状态码：" + textStatus);
                    layer.close(index);
                }
            });
        }
        else {
            layer.close(index);
            alert("请选择周边距离！");
        }
    }
</script>
