<script type="text/javascript">
    $(function(){
        //检索点
        $.ajax({
            type: "Post",
            url: "/MapCommon/GetMapDataListInfoAjax",
            data: { jcfid: '@ViewBag.strjcfid'},
            dataType: "json",
            success: function (obj) {
                if (obj != null && obj.Success) {
                    var datalist = obj.DataList;
                    for (var i = 0; i < datalist.length; i++) {
                        showMapInfoWindows(datalist[i]);
                        //console.info(datalist[i]);
                    }
                }
            }
        });
    });

    ///获取周边护林员
    function GetHlyInfos(jd,wd,jcfid)
    {
        //加载层
        var index = layer.load(0, {shade: false}); //0代表加载的风格，支持0-2
        var area= $('#areaselect_'+jcfid).val();//获取选择区域的值
        if (area !="0" && area!="") {
            $.ajax({
                type: "Post",
                url: "/MapCommon/GetHlyByArea",
                data: { jd: jd,wd:wd,area:area},
                dataType: "json",
                success: function (obj) {
                    if (obj != null ) {
                        layer.close(index);
                        if (obj.Success) {
                            getLonLat(obj.Msg);
                            //alert(obj.Msg);
                        }
                        else {
                            layer.msg('未检索到周边护林员！', {
                                icon: 5,time: 1000
                            });
                        }
                    }
                },
                error:  function(XMLHttpRequest, textStatus, errorThrown){
                    //通常情况下textStatus和errorThrown只有其中一个包含信息
                    // this;   //调用本次ajax请求时传递的options参数
                    layer.msg('处理出现错误！状态码：'+textStatus, {
                        icon: 5,time: 1000
                    });
                    layer.close(index);
                }
            });
        }
        else
        {
            layer.close(index);
            layer.msg('请选择周边距离！', {
                icon: 5,time: 1000
            });
        }
    }
</script>