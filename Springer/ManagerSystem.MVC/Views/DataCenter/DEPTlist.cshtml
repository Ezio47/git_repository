            if (Method == "See")
                btnInfo = [];
            var str = "仓库添加";
            if (Method == "Mdy")
                str = "仓库修改";
            if (Method == "See")
                str = "仓库查看";
            layer.open({
                type: 1,
                title: str,
                area: ['50%', '48%'],
                btn: btnInfo,
                shade: 0,
                maxmin: true,
                content: $('#tableadd'),
                yes: function (index, layero) {
                    var t1 = $('#JD').val();
                    var t2 = $('#WD').val();
                    var t3 = $('#LINKWAY').val();
                    var t4 = $('#NAME').val();
                    var t5 = $('#RESPONSIBLEMAN').val();
                    if ($.trim(t1) != "") {
                        reg = /^-?\d+\.\d{1,6}$/;
                        if (!reg.test(t1)) {
                            layer.msg('经度格式不正确！', { icon: 5 });
                            $('#JD').focus();
                            return;
                        }
                    }
                    if ($.trim(t2) != "") {
                        reg = /^-?\d+\.\d{1,6}$/;
                        if (!reg.test(t2)) {
                            layer.msg('纬度格式不正确！', { icon: 5 });
                            $('#WD').focus();
                            return;
                        }
                    }
                    if ($.trim(t3) != "") {
                        if (checkPhone(t3) == false && checkTel(t3) == false) {
                            layer.msg('联系方式格式不正确！', { icon: 5 });
                            $('#CONTACTS').focus();
                            return;
                        }
                    }
                    if ($.trim(t4) == "") {
                        layer.msg('请填写名称！', { icon: 5 });
                        $('#NAME').focus();
                        return;
                    }
                    if ($.trim(t5) == "") {
                        layer.msg('请填写责任人！', { icon: 5 });
                        $('#RESPONSIBLEMAN').focus();
                        return;
                    }
                    if ($.trim(t3) == "") {
                        layer.msg('请填写联系方式！', { icon: 5 });
                        $('#LINKWAY').focus();
                        return;
                    }
                    if ($.trim(t1) == "" || $.trim(t2) == "") {
                        layer.msg('请在地图标注仓库的位置！', { icon: 5 });
                        $('#JD').focus();
                        return;
                    }
                    $.ajax({
                        type: "Post",
                        url: "/DataCenter/DEPTManager",
                        data: {
                            DCREPOSITORYID: ID,
                            Method: Method,
                            NAME: document.getElementById("NAME").value,
                            ADDRESS: document.getElementById("ADDRESS").value,
                            //BYORGNO: document.getElementById("BYORGNO").value,
                            BYORGNO: $('#BYORGNO').combotree('getValue'),
                            RESPONSIBLEMAN: document.getElementById("RESPONSIBLEMAN").value,
                            LINKWAY: document.getElementById("LINKWAY").value,
                            JD: document.getElementById("JD").value,
                            WD: document.getElementById("WD").value,

                        },
                        dataType: "json",
                        error: function () {
                            alert('错误:异常!', 'error');
                        },
                        success: function (re) {
                            if (re.Success) {
                                layer.close(index);
                                layer.msg('操作成功', { icon: 6 });
                                query('1');
                            }
                            else {
                                layer.msg(re.Msg, { icon: 5 });
                            }
                        }
                    });

                }, cancel: function (index) {
                    layer.close(index);
                }
            })
        }
    }

