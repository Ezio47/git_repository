    //});
    var bln = '@ViewBag.isAdd';
    if (bln == "1") {
        document.getElementById('btnAdd').style.display = "";
    }
    $(function () {
        $('#tbxORGNOS').combotree({
            url: '/DataCenter/OrgTreeget',
            editable: false,
            required: true,
            panelHeight: 300,
            onLoadSuccess: function (node, data) {
                var t = $("#tbxORGNOS").combotree('tree');//获取tree
                t.tree("collapseAll");
                node = t.tree("find", data[0].id);
                t.tree("expand", node.target);//展开节点 expandTo
            }
        });
        $('#tbxORGNOS').combotree('setValue', "@curorgno");
        query('1');
    });
    $(function () {
        $('#BYORGNO').combotree({
            url: '/DataCenter/OnlyOrgTreeget',
            editable: false,
            required: true,
            panelHeight: 300,
            onLoadSuccess: function (node, data) {
                var t = $("#BYORGNO").combotree('tree');//获取tree
                t.tree("collapseAll");
                node = t.tree("find", data[0].id);
                t.tree("expand", node.target);//展开节点 expandTo
            }
        });
        $('#BYORGNO').combotree('setValue', "@curorgno");
    });
    function query(Page) {
        var pagesize = '0';
        if (document.getElementById("selPageSize") != null) {
            pagesize = document.getElementById("selPageSize").value;
        }
        var ORGNOS = $('#tbxORGNOS').combotree('getValue');
        $.ajax({
            url: '/DataCenter/getCAMPlist',
            data: {
                ORGNOS: ORGNOS,
                STRUCTURETYPE: document.getElementById("tbxSTRUCTURETYPE").value,
                NAME: document.getElementById("tbxNAME").value,
                NUMBER: document.getElementById("tbxNUMBER").value,
                PageSize: pagesize,
                Page: Page,
            },
            type: 'post',
            success: function (data) {
                var ar = eval('(' + data + ')');
                if (ar.Success) {
                    $('#divTable').html(ar.tableInfo);
                    $('#divPager').html(ar.pagerInfo);
                }
                else {
                    alert('登录异常');
                }
            },
            error: function (err, ioArgs) {
                alert('登录异常');
            }
        });
    }

    //地图定位
    function setPoint() {
        var name = document.getElementById("NAME").value;
        var jd = document.getElementById("JD").value;
        var wd = document.getElementById("WD").value;
        layer.open({
            type: 2,
            title: name + '地图位置设置',
            btn: ['保存', '关闭'],
            area: ['70%', '80%'],
            fix: false, //不固定
            maxmin: true,
            content: '/MapCommon/GetMapPontIndex?jd=' + jd + "&wd=" + wd,
            yes: function (index, layero) { //或者使用btn1
                //按钮【按钮一】的回调
                var ptxt = layer.getChildFrame("p", index);
                var arr = ptxt.html().split(',');
                if ($.trim(arr) != "") {
                    var jd = parseFloat(arr[0]).toFixed(6);
                    var wd = parseFloat(arr[1]).toFixed(6);
                    $('#JD').val(jd);
                    $('#WD').val(wd);
                }
                layer.close(index);
            },
            cancel: function (index) {
                layer.close(index);
            }
        });
    }

    function Manager(Method, ID, page) {
        if (Method == 'Del') {
            if (confirm('确实要删除该内容吗?')) {
                $.ajax({
                    type: "Post",
                    url: "/DataCenter/CAMPManager",
                    data: {
                        DC_UTILITY_CAMP_ID: ID,
                        Method: Method,
                    },
                    dataType: "json",
                    error: function () {
                        alert('错误:异常!', 'error');
                    },
                    success: function (re) {
                        if (re.Success) {
                            layer.msg('删除成功', { icon: 6 });
                            query(page);
                        }
                        else {
                            layer.msg('删除失败', { icon: 5 });
                        }
                    }
                });
            }
        }
        else {
            if (Method == 'Mdy' || Method == 'See') {
                $.ajax({
                    type: "Post",
                    url: "/DataCenter/GetCAMPjson",
                    data: {
                        DC_UTILITY_CAMP_ID: ID,
                    },
                    dataType: "json",
                    error: function () {
                        alert('错误:异常!', 'error');
                    },
                    success: function (data) {
                        if (data.DC_UTILITY_CAMP_ID != '') {
                            document.getElementById("NUMBER").value = data.NUMBER;
                            document.getElementById("NAME").value = data.NAME;
                            document.getElementById("AREA").value = data.AREA;
                            document.getElementById("FLOOR").value = data.FLOOR;
                            document.getElementById("STRUCTURETYPE").value = data.STRUCTURETYPE;
                            document.getElementById("SUBFACILITIES").value = data.SUBFACILITIES;
                            document.getElementById("MARK").value = data.MARK;
                            document.getElementById("JD").value = data.JD;
                            document.getElementById("WD").value = data.WD;
                            //document.getElementById("ORGNOS").value = data.ORGNOS;
                            $('#BYORGNO').combotree('setValue', data.ORGNOS);
                            document.getElementById("WORTH").value = data.WORTH;
                            //$('#ORGNOS').combobox('setValues', data.ORGNOS.split(','));
                            $('#BUILDDATE').datebox('setValue', data.BUILDDATE);
                            $('#BUILDDATEBEGIN').datebox('setValue', data.BUILDDATEBEGIN);
                            $('#BUILDDATEEND').datebox('setValue', data.BUILDDATEEND);
                        }
                    }
                });
            }
            if (Method == 'Add') {
                document.getElementById("NUMBER").value = "";
                document.getElementById("NAME").value = "";
                document.getElementById("AREA").value = "";
                //document.getElementById("BUILDDATE").value = "";
                document.getElementById("FLOOR").value = "";
                document.getElementById("STRUCTURETYPE").value = "";
                document.getElementById("SUBFACILITIES").value = "";
                document.getElementById("MARK").value = "";
                document.getElementById("JD").value = "";
                document.getElementById("WD").value = "";
                //document.getElementById("ORGNOS").value = "";
                $('#BYORGNO').combotree('setValue', "@curorgno");
                document.getElementById("WORTH").value = "";
                //$('#ORGNOS').combobox('setValues', "");
                $('#BUILDDATE').datebox('setValue', "");
                $('#BUILDDATEBEGIN').datebox('setValue', "");
                $('#BUILDDATEEND').datebox('setValue', "");
            }
            var btnInfo = ['保存', '取消'];
            if (Method == "See")
                btnInfo = [];
            var str = "营房添加";
            if (Method == "Mdy")
                str = "营房修改";
            if (Method == "See")
                str = "营房查看";
            layer.open({
                type: 1,
                title: str,
                area: ['62%', '65%'],
                btn: btnInfo,
                shade: 0,
                maxmin: true,
                content: $('#tableadd'),
                yes: function (index, layero) {
                    var t1 = $('#JD').val();
                    var t2 = $('#WD').val();
                    var t3 = $('#WORTH').val();
                    var t4 = $('#AREA').val();
                    var t5 = $('#NAME').val();
                    var t6 = $('#NUMBER').val();
                    if ($.trim(t1) != "") {
                        reg = /^-?\d+\.\d{1,6}$/;
                        if (!reg.test(t1)) {
                            layer.msg('经度格式不正确！', { icon: 5 });
                            $('#JD').focus();
                            return;
                        }
                    }
                    if ($.trim(t2) != "") {
                        reg = /^-?\d+\.\d{1,6}$/;
                        if (!reg.test(t2)) {
                            layer.msg('纬度格式不正确！', { icon: 5 });
                            $('#WD').focus();
                            return;
                        }
                    }
                    if ($.trim(t3) != "") {
                        if (CheckNUM($.trim(t3)) == false) {
                            layer.msg('总价请填写数字！', { icon: 5 });
                            $('#WORTH').focus();
                            return;
                        }
                    }
                    if ($.trim(t4) != "") {
                        if (CheckNUM($.trim(t4)) == false) {
                            layer.msg('面积请填写数字！', { icon: 5 });
                            $('#AREA').focus();
                            return;
                        }
                    }
                    if ($.trim(t5) == "") {
                        layer.msg('请填写名称！', { icon: 5 });
                        $('#NAME').focus();
                        return;
                    }
                    if ($.trim(t6) == "") {
                        layer.msg('请填写编号！', { icon: 5 });
                        $('#NUMBER').focus();
                        return;
                    }
                    //var str = $('#ORGNOS').combobox('getValues').join(',');
                    $.ajax({
                        type: "Post",
                        url: "/DataCenter/CAMPManager",
                        data: {
                            DC_UTILITY_CAMP_ID: ID,
                            Method: Method,
                            NUMBER: document.getElementById("NUMBER").value,
                            NAME: document.getElementById("NAME").value,
                            AREA: document.getElementById("AREA").value,
                            FLOOR: document.getElementById("FLOOR").value,
                            STRUCTURETYPE: document.getElementById("STRUCTURETYPE").value,
                            SUBFACILITIES: document.getElementById("SUBFACILITIES").value,
                            MARK: document.getElementById("MARK").value,
                            JD: document.getElementById("JD").value,
                            WD: document.getElementById("WD").value,
                            //ORGNOS: document.getElementById("ORGNOS").value,
                            ORGNOS: $('#BYORGNO').combotree('getValue'),
                            WORTH: document.getElementById("WORTH").value,
                            //ORGNOS: str,
                            BUILDDATE: $('#BUILDDATE').datebox('getValue'),
                            BUILDDATEBEGIN: $('#BUILDDATEBEGIN').datebox('getValue'),
                            BUILDDATEEND: $('#BUILDDATEEND').datebox('getValue'),
                        },
                        dataType: "json",
                        error: function () {
                            alert('错误:异常!', 'error');
                        },
                        success: function (re) {
                            if (re.Success) {
                                layer.close(index);
                                layer.msg('操作成功', { icon: 6 });
                                query('1');
                            }
                            else {
                                layer.msg(re.Msg, { icon: 5 });
                            }
                        }
                    });

                },
                cancel: function (index) {
                    layer.close(index);
                }
            })
        }
    }
    //地图定位展示
    function Position(tablename, id, name) {
        layer.open({
            type: 2,
            title: name + '地图定位',
            area: ['70%', '80%'],
            //shade: 0,
            fix: true,
            maxmin: true,
            content: '/MapCommon/MapPostionCommonIndex?tablename=' + tablename + "&id=" + id
        })
    }
    //数据查看
    function See(ID, tablename) {
        layer.open({
            type: 2,
            title: '营房查看',
            area: ['60%', '60%'],
            fix: true,
            maxmin: true,
            content: '/DataCenter/SeeIndex?tablename=' + tablename + "&ID=" + ID
        })
    }
    //照片管理
    function Photo(PRID, PHOTOTYPE) {
        layer.open({
            type: 2,
            title: '照片管理',
            area: ['60%', '60%'],
            fix: true,
            maxmin: true,
            content: '/DataCenter/PhotoIndex?PHOTOTYPE=' + PHOTOTYPE + "&PRID=" + PRID
        })
    }

    //选中改变颜色
    function setColor(obj) {
        $(obj).css("background-color", "#FFDAB9");
        $("tr").not($(obj)).css("background-color", "");
    }
</script>