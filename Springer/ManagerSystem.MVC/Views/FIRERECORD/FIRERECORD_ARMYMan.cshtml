}
<style>
    table tr td {
        color: #3c7915;
        padding-left: 10px;
    }
</style>
<div class="easyui-layout" data-options="fit:true" style=" border:0;">
    <div data-options="region:'center'" title="" style=" border: none; ">
        <input id="dic315Value" type="hidden" value="@ViewBag.dic315Value" />
