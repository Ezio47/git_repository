                    <td> 第三产业：</td>
                    <td><input id="tbx14" type="text" value="0" style="width: 70%;" /></td>
                </tr>
                <tr style="width:95%;">
                    <td> 其他 ：</td>
                    <td><input id="tbx15" type="text" value="0" style="width: 70%;" /></td>
                    <td colspan="2"> </td>
                </tr>
            </table>
        </div>
        <p style="text-align:center;margin-bottom:10px;">
            <input type="button" class="btnSaveCss" value="保存" onclick="Manager()" id="Save" />
        </p>
    </div>
</div>

<script type="text/javascript">
    function Manager() {
        var dic315Value = $('#dic315Value').val().split(',');
        var dic315Count = $('#dic315Count').val();
        if (dic315Count != "") {
            dic315Count = parseInt(dic315Count);
        }
        var strREPORTCODE = "";
        var strREPORTVALUE = "";
        for (var x = 0; x < dic315Count; x++) {
            var temp = x.toString();
            var s = $('#tbx' + temp + '').val();
            if ($.trim(s) != "") {
                if (!CheckNUM2(s)) {
                    layer.msg('请输入整数!', { icon: 5 });
                    $('#tbx' + temp + '').focus();
                    return;
                }
                else {
                    if (s == "0" || s == "") {
                        continue;
                    }
                    else {
                        strREPORTCODE = strREPORTCODE + dic315Value[x] + ",";
                        strREPORTVALUE = strREPORTVALUE + $('#tbx' + temp + '').val() + ",";
                    }
                }
            }
        }
        $.ajax({
            url: '/FIRERECORD/FIRERECORD_ARMYManager',
            type: 'post',
            cache: false,
            timeout: 10000, //10秒后超时，如果为0则永不超时
            data: {
                REPORTYEAR: $("#tbxREPORTYEAR").val(),
                BYORGNO: $("#tbxBYORGNO").val(),
                REPORTCODE: strREPORTCODE,
                REPORTVALUE: strREPORTVALUE,
                Method: '@ViewBag.Method',
            },
            success: function (data, ioArgs) {
                var ar = eval('(' + data + ')');
                if (ar.Success) {
                    if (confirm(ar.Msg + ' 请返回?')) {
                        var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
                        parent.layer.close(index);
                    }
                }
                else {
                    layer.msg(ar.Msg, { icon: 5 });
                }
            },
            error: function (err, ioArgs) {
                layer.msg('系统异常!', { icon: 5 });
            }
        });
    }
</script>
