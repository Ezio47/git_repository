@{
    Layout = "~/Views/Shared/_LayoutIndexNoMenu.cshtml";
}
<script src="~/Scripts/Chart/echarts.js"></script>
<script src="~/Scripts/Chart/DataCenterChart/CampCount.js"></script>
<div class="easyui-layout" data-options="fit:true" style=" border:0;">

    <div data-options="region:'center'" title="" style=" border: none;">

        <div class="easyui-layout" data-options="fit:true" style=" border:0;">

            <div data-options="region:'north'" title="" style=" height:35px; border: none; overflow:hidden;">
                <div class="divOP">
                    <div class="home">
                        单位:<select id="ORGNO">
                            @Html.Raw(@ViewBag.vdOrg)
                        </select>
                        <input type="checkbox" name="jg" value="1" checked="checked" />钢构
                        <input type="checkbox" name="jg" value="2" checked="checked" />砖混
                        <input type="checkbox" name="jg" value="3" checked="checked" />钢混
                        <input type="button" value="查询" onclick="query()" class="btnSearchCss" />
                    </div>
                </div>
            </div>

            <div data-options="region:'center'" title="" class="LayoutCenterBG" style="width:100%;">
                <div id="CampChart" style="width:80%;height:500px;float:left;">
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var CampChart = echarts.init(document.getElementById('CampChart'));//个数展示
    function query() {
        var TopEchart = $('#ORGNO').val();
        var DictValue = $("input:checkbox[name='jg']:checked").map(function (index, elem) {
            return $(elem).val();
        }).get().join(',');
        getCampCount(TopEchart, DictValue);
    }
</script>
